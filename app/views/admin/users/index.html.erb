<h1>ユーザー一覧</h1>
<p><%= notice %></p>

<p><%= link_to 'ユーザーを登録する', new_admin_user_path %></p>

<table class="container">
  <tr class="row">
    <th class="col-md-3">ユーザー名</th>
    <th class="col-md-3">メールアドレス</th>
    <th class="col-md-2">タスクの数</th>
    <!--<th class="col-md-2">権限</th>-->
  </tr>
<% @users.each do |user| %>
  <tr class="row">
  <td class="col-md-3"><%= user.name %></td>
  <td class="col-md-3"><%= user.email %></td>
  <td class="col-md-2"><%= user.tasks.count %></td>
  <!--<td class="col-md-2"><#%=# user.authority %></td>-->

  <td><%= link_to '詳細', admin_user_path(user.id) %></td>
  <td><%= link_to "編集", edit_admin_user_path(user.id) %></td>
  <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
