<h1>タスク一覧</h1>
<p><%= notice %></p>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<table>
  <tr>
    <th>タスク名</th>
    <th>詳しい内容</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td ><%= task.task_name %></td>
    <td ><%= task.content %></td>
    <td> <%= format("%04d年%02d月%02d日", task.deadline.year, task.deadline.month, task.deadline.day) %> </td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to "編集", edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
  </tr>
<% end %>
</table>
<p><%= link_to '物件を登録する', new_task_path %></p>
