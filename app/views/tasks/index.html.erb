<h1>タスク一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タスク名</th>
    <th>詳しい内容</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_name %></td>
    <td><%= task.content %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to "編集", edit_task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %>
  </tr>
<% end %>
</table>
<p><%= link_to '物件を登録する', new_task_path %></p>
