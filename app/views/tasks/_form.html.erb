<% if @task.errors.any? %>
<div id="error_explanation">
  <h2><%= @task.errors.count %>件のエラーがあります。</h2>
  <ul>
    <% @task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with( model: @task, local: true ) do |f| %>
  <%= f.label :task_name, t('view.task_name') %> <br>
  <%= f.text_field :task_name %> <br>
  <%= f.label :content, t('view.content') %> <br>
  <%= f.text_area :content %> <br>
  <%= f.label :deadline, t('view.deadline') %> <br>
  <%= f.date_select  :deadline %> <br>
  <%= f.label :status, t('view.status') %> <br>
  <%= f.select :status, ["未着手", "着手中", "完了"] %> <br>
  <%= f.label :priority, t('view.priority') %> <br>
  <%= f.select :priority, ["低", "中", "高"] %> <br>
  <%= f.submit "登録する" %>
<% end %>
